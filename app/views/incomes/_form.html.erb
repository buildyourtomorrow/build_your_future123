<%= form_for income, :html => { :class => 'form-horizontal', "data-validate" => "parsley", :style => "margin: 0;" } do |f| %>
<div class="modal-body form-fields">
  <div class="row-fluid">
    <div class="span6">
      <%= f.label :amount, :class => 'control-label' %>
    </div>
    <div class="span6">
      <div class="input-prepend">
        <span class="add-on">$</span>
        <%= f.text_field :amount, :class => "span10", "data-required" => "true", "data-type" => "number", "data-type-number-message" => "The value can only be integer." %>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6">
      <%= f.label :frequency, :class => 'control-label' %>
    </div>
    <div class="span6">
      <%= f.select :frequency, options_for_select(Income::FREQUENCY_HASH.map{|k, v| [v, k]}, income.frequency), {:include_blank => "- Select Frequency -"}, :class => "span12", "data-required" => "true" %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <%= f.label :start_date, :class => 'control-label' %>
    </div>
    <div class="span6">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-calendar"></i></span>
        <%= f.text_field :start_date, :class => 'datepicker span10', "data-required" => "true", "data-americandate" => "true" %>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <%= f.label :savings, :class => 'control-label' %>
    </div>
    <div class="span6">
      <%= f.select :savings, options_for_select([["10%", "10"], ["25%", "25"]], income.savings), {:include_blank => "- Select Savings -"}, :class => "span12", "data-required" => "true" %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <%= f.text_field :description, :class => 'text_field', :placeholder => "Description", :class => "span12", "data-required" => "true", "data-maxlength" => "20" %>
    </div>
  </div>


</div>
<div class="modal-footer">
  <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  <%= f.submit nil, :class => 'btn btn-primary' %>
</div>
<% end %>
